<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800"><%= title %></h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
      <div class="card-header py-3">
          <h5 class="m-0 font-weight-bold text-primary">Data User</h5>
      </div>

      <div class="card-body">
          <div class="mb-3">
              <a href="/data-admin/add">
                  <button class="btn btn-success">
                      <i class="fas fa-plus"></i> Tambah Data Admin
                  </button>
              </a>
          </div>

          <% if (typeof msg !== 'undefined' && msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                  <%= msg %>
              </div>
          <% } %>

          <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                      <tr class="text-center">
                          <th>No</th>
                          <th>Username</th>
                          <th>Nama</th>
                          <th>Nomor Handphone</th>
                          <th>Email</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tbody class="text-center">
                      <% data.forEach((data_admin, index) => { %>
                          <tr>
                              <td><%= index + 1 %></td>
                              <td><%= data_admin.username %></td>
                              <td><%= data_admin.nama %></td>
                              <td><%= data_admin.mobile %></td>
                              <td><%= data_admin.email %></td>
                              <td>
                                  <a href="/data-admin/update-admin/<%= data_admin.username %>">
                                      <button class="btn btn-success">Update</button>
                                  </a>
                                  <a href="/data-admin/delete-admin/<%= data_admin.username %>" class="btn btn-danger btn-md position-relative"
                                      onclick="return confirm(`Are you sure you want to delete <%= data_admin.username %>?`)">
                                      Delete
                                  </a>
                                  <a data-toggle="modal" data-target="#detailModal<%= data_admin.username %>"><button class="btn btn-info">Detail</button></a>
                              </td>
                          </tr>
                      <% }); %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
</div>
<!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Modals -->
<% data.forEach((data_admin) => { %>
  <div class="modal fade" id="detailModal<%= data_admin.username %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Detail Admin:</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                  <div class="container">
                      <div class="row">
                          <label class="col-md-4" for="nama">Nama:</label>
                          <div class="col-md-8 mb-4"><%= data_admin.nama %></div>
                      </div>
                      <div class="row">
                          <label class="col-md-4" for="mobile">Nomor Telepon:</label>
                          <div class="col-md-8 mb-4"><%= data_admin.mobile %></div>
                      </div>
                      <div class="row">
                          <label class="col-md-4" for="email">Email:</label>
                          <div class="col-md-8 mb-4"><%= data_admin.email %></div>
                      </div>
                      <div class="row">
                          <label class="col-md-4" for="password">Password:</label>
                          <div class="col-md-8 mb-4"><%= data_admin.password %></div>
                      </div>
                  </div>
              </div>
              <div class="modal-footer">
                  <button class="btn btn-outline-secondary" type="button" data-dismiss="modal">Close</button>
              </div>
          </div>
      </div>
  </div>
<% }); %>
