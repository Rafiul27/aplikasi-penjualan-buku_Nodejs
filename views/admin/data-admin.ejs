<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"><%= titleadmin %></h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Data User</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
              <button href="/data-admin" class="btn btn-success" data-toggle="modal" data-target="#tambahDataModal">
                <i class="fas fa-plus"></i> Tambah Data Admin
              </button>
            </div>
            <% if (typeof msg !== 'undefined' && msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>
        <div class="card-body">
            <div class="table-responsive mx-auto">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th>No</th>
                            <th>Id Admin</th>
                            <th>Nama</th>
                            <th>Nomor Handphone</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                            <% dataAdmin.forEach((data, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= data.id_admin %></td>
                                    <td><%= data.nama %></td>
                                    <td><%= data.mobile %></td>
                                    <td><%= data.email %></td>
                                    <td>
                                        <a href="/data-admin/update-admin/<%= data.id_admin %>"><button class="btn btn-success">Update</button></a>
                                        <a
                                        href="/data-admin/delete-admin/<%= data.id_admin %>"
                                        class="btn btn-danger btn-md position-relative"
                                        onclick="return confirm(`Are you sure you want to delete <%= data.nama %>?`)"
                                        >
                                        Delete
                                        </a>
                                        <button class="btn btn-success btn-sm">Detail</button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->