<!-- Start about Area -->
<section class="section-gap info-area" id="about">
     <!-- Begin Page Content -->
     <div class="container-fluid">
        <div class="container">
            <h2 class="mt-3 mb-2">Rekomendasi Search Book untukmu</h2>

            <div class="book-container">
                <% dataBuku.forEach((books, index) => { %>
                    <div class="book-card">
                        <a href="/detail-buku/:<%= books.id_buku %>"><img src="../../public/assets2/img/<%= books.image_buku %>" class="img-fluid py-2" alt="<%= books.title %>"></a>
                        <p class="mt-2" style="font-size: 16px;"><%= books.title %></p>
                        <p style="font-size: 12px;">Harga: $<%= books.harga %></p>
                        <a href="/detail-buku/<%= books.id_buku %>"><button class="btn btn-primary">Detail</button></a>
                    </div>
                <% }); %>
            </div>

            <h2 class="mt-3 mb-2">Buku - Buku Terpopuler</h2>

            <div class="book-container">
                <% dataBuku.forEach((books, index) => { %>
                    <div class="book-card text-center">
                        <img src="../../public/assets2/img/<%= books.image_buku %>" class="img-fluid py-2" alt="<%= books.title %>">
                        <p class="mt-2"><%= books.title %></p>
                        <p>Harga: $<%= books.harga %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>
<!-- End about Area -->

