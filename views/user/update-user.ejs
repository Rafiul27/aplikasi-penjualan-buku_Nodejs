<!-- Begin Page Content -->
<div class="container-fluid">
  <div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data User</h2>
            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
            
            <% } %>
            <form method="post" action="/data-user/update">
                <input type="hidden" name="oldName" value="<%= users.oldName || users.nama %>">
                <div class="mb-3">
                  <label for="id_user" class="form-label">ID Customer</label>
                  <input type="text" class="form-control" id="id_user" name="id_user" value="<%= users.id_user ? users.id_user : '' %>" required>
                </div>
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= users.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">email</label>
                  <input type="text" class="form-control" id="email" name="email" required value="<%= users.email %>">
                </div>
                <div class="mb-3">
                  <label for="mobile" class="form-label">No.Telepon</label>
                  <input type="text" class="form-control" id="mobile" name="mobile" required value="<%= users.mobile %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah data user</button><br><br>
                <a href="/data-user" class="card-link">&laquo;Kembali ke Contact list</a>
              </div>
          </div>
    </div>
</div>