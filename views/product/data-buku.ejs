<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"><%= title %></h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Data Buku</h4>
        </div>

        <div class="card-body">
            <div class="mb-3">
              <a href="/data-buku/add"><button class="btn btn-success"><i class="fas fa-plus"></i> Tambah Data Buku</button></a>
            </div>
        <div class="card-body">
            <% if (typeof msg !== 'undefined' && msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>
            <div class="table-responsive mx-auto">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th>No</th>
                            <th>Gambar</th>
                            <th>Judul Buku</th>
                            <th>Kategori</th>
                            <th>Penerbit</th>
                            <th>Pengarang</th>
                            <th>Harga</th>
                            <th>Jumlah Buku</th>
                            <th>Aksi</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                            <% dataBuku.forEach((books, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src="../../public/assets2/img/<%= books.image_buku %>" style="max-width: 100px; height: auto;"></td>
                                    <td id="kodebuku"><%= books.title %></td>
                                    <td><%= books.category %></td>
                                    <td><%= books.penerbit %></td>
                                    <td><%= books.pengarang %></td>
                                    <td><%= books.harga %></td>
                                    <td><%= books.jumlah %></td>
                                    <td>
                                        <a href="/data-buku/update-buku/<%= books.id_buku %>"><button class="btn btn-success">Update</button></a>
                                        <a
                                            href="/data-buku/delete-buku/<%= books.id_buku %>"
                                            class="btn btn-danger btn-md position-relative"
                                            onclick="return confirm(`Are you sure you want to delete <%= books.id_buku %>?`)"
                                            >
                                            Delete
                                            </a>
                                    </td>
                                </tr>
                                <div class="modal fade" id="detailModal<%= books.title %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Detail Books:</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Judul Buku</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.title %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Deksripsi</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.deksripsi %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Kategori</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.category %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Penerbit</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.penerbit %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Pengarang</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.pengarang %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Harga</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= (books.harga).toLocaleString("id-ID", {style:"currency", currency:"IDR"}) %></div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3 col-4 mb-2">Jumlah</div>
                                                        <div class="col-sm-9 col-8 mb-2"><%= books.jumlah %> pcs</div>
                                                    </div>
                                                    <div class="row">
                                                        <!-- <div class="col-sm-3 col-4 mb-2">Foto</div> -->
                                                        <div class="col-sm-9 col-6 mb-2"><img style="height: 280px; width: 280px;" class="img-profile rounded text-center" src="../../public/assets2/img/<%= books.image_buku %>"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-outline-secondary" type="button" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->